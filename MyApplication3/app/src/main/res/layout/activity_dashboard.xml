                    app:gaugePointEndColor="#FFF"
                    app:gaugePointStartColor="#FFF"
                    app:gaugeStartAngle="120"
                    app:gaugeStartValue="0"
                    app:gaugeStrokeCap="BUTT"
                    app:gaugeStrokeColor="#80FFFFFF"
                    app:gaugeStrokeWidth="10dp"
                    app:gaugeSweepAngle="300"
